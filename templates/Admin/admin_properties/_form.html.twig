{{ form_start(form) }}
    <div class="row">
        <div class="col-5">
            {{ form_row(form.title) }}
        </div>
        <div class="col-3">
            {{ form_row(form.surface) }}
        </div>
        <div class="col-3">
            {{ form_row(form.price) }}
        </div>
        <div class="form-check form-switch col-1">
            {{ form_row(form.sold, {'attr': {'class': 'form-check-input'}}) }}
        </div>
    </div>
    <div class="row">
        {{ form_row(form.description) }}
    </div>
    <div class="row">
        {{ form_row(form.options) }}
    </div>
    <div class="row">
        {{ form_row(form.imageFile) }}
    </div>
    <div class="row">
        <div class="col-4">
            {{ form_row(form.rooms) }}
        </div>
        <div class="col-4">
            {{ form_row(form.bedrooms) }}
        </div>
        <div class="col-4">
            {{ form_row(form.ceil) }}
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            {{ form_row(form.address) }}
        </div>
        <div class="col-4">
            {{ form_row(form.city) }}
        </div>
        <div class="col-4">
            {{ form_row(form.postal_code) }}
        </div>
    </div>
    
    <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
